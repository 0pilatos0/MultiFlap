<ContentPage
    x:Class="App.Game"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:App"
    Title="Game"
    BackgroundColor="#F2F2F2">
    <ContentPage.Resources>
        <local:Canvas x:Key="drawable" />
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Header  -->
        <StackLayout
            Grid.Row="0"
            Padding="10"
            BackgroundColor="#2C2C2C">
            <Label
                FontAttributes="Bold"
                FontFamily="Arial"
                FontSize="Large"
                Text="MultiFlap"
                TextColor="White" />
        </StackLayout>

        <!--  Main content  -->
        <VerticalStackLayout
            Grid.Row="1"
            Padding="16"
            BackgroundColor="#F2F2F2">
            <Label
                x:Name="ScoreLabel"
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Score: 0"
                TextColor="Black"
                VerticalOptions="CenterAndExpand" />

            <GraphicsView
                x:Name="canvas"
                BackgroundColor="#F2F2F2"
                Drawable="{StaticResource drawable}"
                HeightRequest="600"
                WidthRequest="400" />

            <HorizontalStackLayout Grid.Row="1">
                <Button
                    Margin="0,16,0,0"
                    BackgroundColor="#2C2C2C"
                    Clicked="OnStartClicked"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    FontSize="Large"
                    Text="Solo"
                    TextColor="White" />
                <Button
                    Margin="0,16,0,0"
                    BackgroundColor="#2C2C2C"
                    Clicked="OnStartMatchmaking"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    FontSize="Large"
                    Text="Multiplayer"
                    TextColor="White" />
            </HorizontalStackLayout>

        </VerticalStackLayout>

        <Label
            x:Name="OnlinePlayersLabel"
            Grid.Row="2"
            Margin="0,8,0,0"
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            Text="Online players: 0"
            TextColor="Black"
            VerticalOptions="CenterAndExpand" />

    </Grid>
</ContentPage>