<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage"
             BackgroundColor="#F2F2F2">
    <VerticalStackLayout>
        <Label Text="Welcome to MultiFlap!" 
               FontSize="Large" 
               HorizontalTextAlignment="Center"
               Margin="0,20,0,0"/>
        <Label Text="How to play:" 
               FontAttributes="Bold" 
               Margin="0,20,0,10"/>
        <Label Text="Tap the screen to make the bird flap its wings and avoid the obstacles." 
               Margin="0,0,0,20"/>
        <Button Text="Start Game" 
                BackgroundColor="#4CAF50" 
                TextColor="White" 
                CornerRadius="8"
                Margin="0,0,0,20"
                Clicked="StartGameClicked"
                />
        <Label Text="High Score: 0" 
               Margin="0,0,0,10"/>
        <Button Text="Settings" 
                BackgroundColor="#2196F3" 
                TextColor="White" 
                CornerRadius="8"/>
    </VerticalStackLayout>
</ContentPage>
